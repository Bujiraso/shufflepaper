function dbug() {
    [[ ! -z ${SFP_DEBUG+x} ]] && echo ${*}
}

function commands_help() {
    cat <<EOS
Usage: $(basename "${0}") COMMAND

Available subcommands are:
$(compgen -c | grep '^sfp-[a-Z\-]*$' | sort | sed 's/sfp-/, /g;s/^, //' | column -c 80 | sed 's/^/\t/') 
EOS
}

# Assert that sfp can be called by subcommands
if ! which sfp 2> /dev/null > /dev/null; then
    sourceDir="$(dirname "$(readlink -f "${0}")")"
    if [[ ! -d "${sourceDir}" ]]; then
        echo "Cannot find sfp's source dir to execute subcommands through. Try installing sfp to your path" > /dev/stderr
        exit 1
    fi
    export PATH="${PATH}:${sourceDir}"
fi

# Verify subcommand is present or print commands_help
if [[ ${#} -eq 0 ]]; then
    dbug "No args received. Printing help"
    commands_help
    exit 0
fi

# Set up sfp script source 
dbug "User wants ${command}"
command="sfp-$(echo ${1} | sed 's/ /-/g')"
# Shift to remove subcommand from its own args
shift

if ! which "${command}" >/dev/null 2>/dev/null; then
    echo "Invalid command ${command}" > /dev/stderr
    exit 3
fi

# Source configuration file if it exists
dbug "Sourcing config"
[[ -f "${XDG_CONFIG_HOME}/shufflepaper/shufflepaper.conf" ]] && source "${XDG_CONFIG_HOME}/shufflepaper/shufflepaper.conf"

# Source script and run its main function
dbug "Sourcing ${command}"
source "${command}"

dbug "Running '${command}' '${*}'"
${command} ${*}

dbug "Done ${command}"
