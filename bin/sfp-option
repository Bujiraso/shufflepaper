subName="option"
OPTIONS="centered scaled spanned zoom stretched wallpaper"

function __sfp-option-help() {
    cat << EOS
Usage: ${subName} [OPTIONS...] <ARGUMENT>
    -h        Print this help message and exit
    -n        No update of wallpaper in DB
Argument can be one of: ${OPTIONS}
EOS
    exit 0
}

function __sfp-option() {
    if [[ ${#} -eq 0 ]]; then
        __sfp-option-help
    fi

    while getopts "hn" opt; do
        case "${opt}" in
            "h")
                __sfp-option-help
                ;;
            "n")
                noUpdate=1
                ;;
        esac
        shift
    done

    arg=${1}
    case "${arg}" in
        "centered"|"scaled"|"spanned"|"zoom"|"stretched"|"wallpaper")
            export $(dbus-launch)
            DISPLAY=:0 gsettings set org.gnome.desktop.background picture-options "${arg}"
            if [[ -z "${noUpdate}" ]]; then
                sfp alter -m "${arg}"
            fi
            ;;
        *) #Invalid view option
            echo "${subName}: Invalid argument - ${arg}" >&2
            exit 1
            ;;
    esac
}

function sfp-option {
    __sfp-option ${*}
}
